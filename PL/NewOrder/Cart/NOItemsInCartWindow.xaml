<Window x:Class="PL.NewOrder.ProductItem.NOItemsInCartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.NewOrder.ProductItem"
        
        mc:Ignorable="d"
        Title="NPCart" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>

            <RowDefinition Height="500*"/>
            <RowDefinition Height="50*"/>

        </Grid.RowDefinitions>

        <Grid DataContext="{Binding}"  Grid.Row="1">
            <ListView   ItemsSource="{Binding Cart.ItemList}" MouseDoubleClick="ListView_MouseDoubleClick" SelectedItem="{Binding ProductToChange}" SelectedValue="{Binding ProductToChange}" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Grid Grid.Row="0">
            <Button Content="back" HorizontalAlignment="Left" Margin="10,7,0,0"  Width="199" Height="28" VerticalAlignment="Top" Click="Back_Click" FontSize="22" FontFamily="Sitka Small"/>
            <Button Content="submit" HorizontalAlignment="Left" Margin="568,7,0,0"  Width="199" Height="28" VerticalAlignment="Top" Click="Submit_Click" FontSize="22" FontFamily="Sitka Small"/>

        </Grid>
        <Grid Grid.Row="2">
            
            <TextBlock Margin="591,0,10,0" Text="{Binding Cart.TotalSum}"  Width="199" Height="28" VerticalAlignment="Top"  FontSize="22" FontFamily="Sitka Small"/>
            <Label Content="sum:" HorizontalAlignment="Left" Margin="522,0,0,0" VerticalAlignment="Center"  FontSize="22" FontFamily="Sitka Small"/>

        </Grid>
    </Grid>
</Window>
