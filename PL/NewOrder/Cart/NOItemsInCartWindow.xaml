<Window x:Class="PL.NewOrder.ProductItem.NOItemsInCartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.NewOrder.ProductItem"
        
        mc:Ignorable="d"
        Title="NPCart" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource self}}">
    <Grid>
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="40* "/>
            <RowDefinition Height="400*"/>
        </Grid.RowDefinitions>-->
        <Button Content="back" Grid.Row="0" HorizontalAlignment="Left" Margin="34,3,0,0" Padding="5" Width="199" Height="28" VerticalAlignment="Top" Click="Back_Click"/>

        <Grid DataContext="{Binding}">
            <ListView   Grid.Row="1" ItemsSource="{Binding MyCart.ItemList}" MouseDoubleClick="ListView_MouseDoubleClick" SelectedItem="{Binding ProductToChange}" SelectedValue="{Binding ProductToChange}" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

    </Grid>
</Window>
